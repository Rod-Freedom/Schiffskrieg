<head>
    <link rel="stylesheet" href="/css/root.css">
</head>

<div class="flex flex-col justify-center content-center">

  <h2 class="text-5xl p-12 m-auto">Sign up</h2>

  <form id="signup-form"  class="bg-teal-700/20 p-32 m-auto rounded-3xl" action="/signup" method="POST">
    <div class="flex flex-col justify-center content-center h-full">

      <div class="m-2">
        <label class="block text-sm font-bold mb-2" for="username">
          Username : 
        </label>
        <input class="w-full bg-teal-950 m-2"
          id="username" type="text" name="username" required>
      </div>

      <div class="m-2">
        <label class="block text-sm font-bold mb-2" for="email">
        Email : 
        </label>
        <input class="w-full bg-teal-950 m-2" id="email" type="email" name="email" required>
      </div>

      <div class="m-2">
        <label class="block text-sm font-bold mb-2" for="password">
          Password
        </label>
        <input
          class="w-full bg-teal-950 m-2"
          id="password" type="password" name="password" required>
      </div>

      <div class="m-2">
        <label class="block text-sm font-bold mb-2" for="password">
          Confirm password : 
        </label>
        <input
          class="w-full bg-teal-950 m-2"
          id="confirm-password" type="password" name="confirm-password" required>
      </div>

      <div class="m-auto">
        <button
          class="bg-gradient-to-r from-teal-700 via-teal-800 to-teal-900 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-teal-500 dark:focus:ring-teal-950 font-medium rounded-lg text-3xl px-5 py-2.5 text-center me-2 m-5"
          type="submit">
          Sign Up
        </button>
      </div>
    <div class="self-center">
      <button type="button" id="login-button">Log In</button>
    </div>
  </form>

</div>

</div>



<script src="/js/signup.js"></script>